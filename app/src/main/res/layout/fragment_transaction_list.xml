<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_transaction_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/fragment_transaction_list_owner"
        tools:text="2016-1-1" />

    <TextView
        android:id="@+id/fragment_transaction_list_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/fragment_transaction_list_invoice"
        tools:text="Ferran" />

    <TextView
        android:id="@+id/fragment_transaction_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_transaction_list_time"
        android:layout_toLeftOf="@id/fragment_transaction_list_amount"
        tools:text="快递" />

    <TextView
        android:id="@+id/fragment_transaction_list_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_transaction_list_owner"
        android:layout_toLeftOf="@id/fragment_transaction_list_invoice"
        tools:text="2000" />

    <CheckBox
        android:id="@+id/fragment_transaction_list_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
</>